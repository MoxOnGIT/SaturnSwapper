@using Saturn.Backend.Data.Services

@inject LocalizationResourceService _localizationResourceService;

<div class="modal minimized" id="finished-modal">
    <div class="modal-window" style="width: 490px">
        <div class="close-button" onclick="saturn.modalManager.hideModal('finished')">
            <i class="fas fa-times"></i>
        </div>
                        
        <div class="modal-header">
            <h1 class="modal-title">@_localizationResourceService.GetString(43)</h1>
            <p class="modal-desc">@_localizationResourceService.GetString(44)</p>
        </div>
    </div>
</div>